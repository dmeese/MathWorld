<% provide(:title, "MathWorld - Sign in") %>
<% flash.each do |key, value| %>
	<div><%=key%>:   <%=value%><br/></div>
<% end %>
<h3>Sign in</h3>
<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.label :userid %>
  <%= f.text_field :userid, :maxlength => 25 %>
  <%= f.label :password %>
  <%= f.password_field :password, :maxlength => 25 %>

  <%= f.submit "Log in" %>
<p>
<a href="/users/new">Click here to register as a new user</a>
<% end %>
